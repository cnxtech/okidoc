{
  "private": true,
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "build": "npm run bootstrap",
    "readme2docs": "cp ./README.md ./docs/README.md",
    "okidoc-site": "node ./packages/okidoc-site/bin/okidoc-site.js",
    "documentation:site": "npm run readme2docs && npm run okidoc-site -- develop ./docs/site.yml",
    "documentation:site:build": "npm run readme2docs && npm run okidoc-site -- build ./docs/site.yml",
    "documentation:site:deploy": "npm run documentation:site:build && gh-pages -d sitedist",
    "format": "prettier --write 'scripts/**/*.js' 'packages/*/{src,bin}/**/*.js' 'packages/*/*.js'",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "precommit": "lint-staged",
    "release": "node scripts/npm-release.js",
    "preparePublish": "lerna publish --skip-npm --force-publish",
    "customPublish": "node scripts/npm-customPublish.js"
  },
  "engines": {
    "node": ">=8"
  },
  "lint-staged": {
    "*.{js,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.40",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "22.4.1",
    "gh-pages": "^1.1.0",
    "husky": "0.14.3",
    "jest": "^22.4.0",
    "lerna": "^2.9.0",
    "lint-staged": "7.0.0",
    "prettier": "1.10.2",
    "regenerator-runtime": "^0.11.1",
    "semver": "^5.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/packages/okidoc-md/lib/",
      "/packages/okidoc-site/site/"
    ],
    "collectCoverageFrom": [
      "packages/okidoc-md/src/buildMarkdown/**/*.js"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "logLevel": "verbose"
  }
}